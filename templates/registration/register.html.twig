{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="row m-0 py-5 my-5 justify-content-center">
        <div class="login-block w-100 p-4">
            {{ form_start(registrationForm) }}
            <h1 class="h3 mb-3 font-weight-normal text-center">Реєстрація</h1>
            <div class="d-flex">
                <div class="left-login px-3 pb-3">
                    <img src="https://cdn.pixabay.com/photo/2015/12/22/04/00/photo-1103597_960_720.png" alt=""
                         class="img-fluid">
                </div>
                <div class="right-login">
                    <div class="form-group">
                        {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control', 'placeholder' : 'Email'} }) }}
                    </div>
                    <div class="form-group pb-3">
                        {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-control', 'placeholder': 'Пароль   ч'} }) }}
                    </div>
                    <div class="button-wrapper w-100 border-top d-flex justify-content-end">
                        <a class="btn btn-lg btn-default text-uppercase" href="/login">
                            Вхід
                        </a>
                        <button class="btn btn-lg btn-default text-uppercase" type="submit">
                            Реєстрація
                        </button>
                    </div>
                </div>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
